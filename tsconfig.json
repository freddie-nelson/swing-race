{
  "compilerOptions": {
    "typeRoots": ["@types", "node_modules/@types"],
    "lib": ["es2020", "DOM"],
    "module": "es2020",
    "target": "es6",
    "noImplicitAny": true,
    "rootDir": "./",
    "outDir": "dist",
    "baseUrl": "./",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowJs": true,
    "sourceMap": true,
    "paths": {
      "@blz/*": ["node_modules/blaze-2d/lib/src/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
